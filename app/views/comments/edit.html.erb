<div class="col-md-6 col-md-offset-3">

  <div class="new-review-form">

<%= form_for([@post,@comment]) do |f| %>
  <% if @comment.errors.any? %>
   <div id="error_explanation" class="alert alert-danger alert-dismissible">
     <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4><%= pluralize(@comment.errors.count, "error") %> prohibited this order from being saved:</h4>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :comment %><br>
    <%= f.text_area :comment, placeholder: "Comment", class: "form-control" %>
  </div>
  <div class="form-group ">
    <%= f.submit "Update  ", class: "btn btn-success" %>
  </div>
<% end %>
</div>
</div>